          <BoxPane orientation="vertical" styles="{padding:4, horizontalAlignment:'left', verticalAlignment:'top'}">
            <ActionButton bxml:id="btnScore" buttonData="Score Rack" xmlns="wordwhiz.clj.ui" />
            <ActionButton bxml:id="btnUndo" buttonData="Undo Move" xmlns="wordwhiz.clj.ui" />
          </BoxPane>
          <BoxPane orientation="vertical" styles="{padding:4, horizontalAlignment:'left', verticalAlignment:'top'}">
            <ActionButton bxml:id="btnReset" buttonData="Reset Game" xmlns="wordwhiz.clj.ui" />
            <ActionButton bxml:id="btnNew" buttonData="New Game" xmlns="wordwhiz.clj.ui" />
          </BoxPane>
          <BoxPane orientation="vertical" styles="{padding:4, horizontalAlignment:'left', verticalAlignment:'top'}">
            <ActionButton bxml:id="btnQuit" buttonData="Quit" xmlns="wordwhiz.clj.ui" />
          </BoxPane>
        </BoxPane>
      </TablePane.Row>
    </TablePane>
  </Border>
