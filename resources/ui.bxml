            <ImageView bxml:id="6,11" />
            <GridPane.Filler/> <GridPane.Filler/> <GridPane.Filler/> <GridPane.Filler/>
          </GridPane.Row>
        </GridPane>
        <BoxPane orientation="vertical">
          <BoxPane orientation="vertical" styles="{padding:4, horizontalAlignment:'left', verticalAlignment:'top', fill:'true'}">
            <ScoreButton xmlns="wordwhiz.clj.ui">
              <content:ButtonData text="Score rack" icon="@image/icons/accept.png" />
            </ScoreButton>
            <UndoButton xmlns="wordwhiz.clj.ui">
              <content:ButtonData text="Undo move" icon="@image/icons/arrow_undo.png" />
            </UndoButton>
          </BoxPane>
          <BoxPane orientation="vertical" styles="{padding:4, horizontalAlignment:'left', verticalAlignment:'top', fill:'true'}">
            <ResetButton xmlns="wordwhiz.clj.ui">
              <content:ButtonData text="Restart game" icon="@image/icons/cancel.png" />
            </ResetButton>
            <NewGameButton xmlns="wordwhiz.clj.ui">
              <content:ButtonData text="New game    " icon="@image/icons/cross.png" />
            </NewGameButton>
          </BoxPane>
          <BoxPane orientation="vertical" styles="{padding:4, horizontalAlignment:'left', verticalAlignment:'top', fill:'true'}">
            <QuitButton xmlns="wordwhiz.clj.ui">
              <content:ButtonData text="Quit" icon="@image/icons/stop.png" />
            </QuitButton>
          </BoxPane>
        </BoxPane>
      </TablePane.Row>
      <TablePane.Row>
        <BoxPane>
          <Checkbox bxml:id="btnMute" xmlns="wordwhiz.clj.ui">
            <content:ButtonData text="Mute" />
          </Checkbox>
          <Checkbox bxml:id="btnDebug" xmlns="wordwhiz.clj.ui">
            <content:ButtonData text="Debug" />
          </Checkbox>
        </BoxPane>
      </TablePane.Row>
    </TablePane>
  </Border>
</Window>
